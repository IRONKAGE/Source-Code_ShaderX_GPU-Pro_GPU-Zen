# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug
endif
export config

PROJECTS := quadtree_simple terrain parametric

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

quadtree_simple: 
	@echo "==== Building quadtree_simple ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f quadtree_simple.make

terrain: 
	@echo "==== Building terrain ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f terrain.make

parametric: 
	@echo "==== Building parametric ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f parametric.make

clean:
	@${MAKE} --no-print-directory -C . -f quadtree_simple.make clean
	@${MAKE} --no-print-directory -C . -f terrain.make clean
	@${MAKE} --no-print-directory -C . -f parametric.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   quadtree_simple"
	@echo "   terrain"
	@echo "   parametric"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
